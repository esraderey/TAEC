# TAEC Advanced Module v3.0 Configuration
# This file contains all configurable parameters for the TAEC system

# Quantum Computing Configuration
quantum:
  dimensions: 4                    # Number of quantum dimensions (qubits = log2(dimensions))
  decoherence_rate: 0.01          # Rate of quantum decoherence (0.0 - 1.0)
  error_correction: true           # Enable quantum error correction
  correction_code_distance: 3      # Distance for error correction code
  measurement_shots: 1024          # Number of measurement shots for quantum operations
  entanglement_threshold: 0.6      # Minimum correlation for entanglement

# Evolution Engine Configuration
evolution:
  population_size: 50              # Size of genetic population
  elite_size: 5                    # Number of elite individuals to preserve
  generations: 100                 # Default number of generations
  max_evolution_time: 300          # Maximum time for evolution in seconds
  
  # Mutation parameters
  mutation:
    base_rate: 0.15               # Base mutation rate
    adaptive: true                # Enable adaptive mutation
    structural_mutation_rate: 0.1  # Rate for structural mutations
    
  # Crossover parameters
  crossover:
    rate: 0.7                     # Crossover rate
    semantic_preservation: true    # Preserve semantic structure
    
  # Strategies
  strategies:
    enabled:
      - synthesis
      - optimization
      - exploration
      - consolidation
      - recovery
      - innovation
    default: standard             # Default evolution strategy
    
  # Fitness evaluation
  fitness:
    cache_size: 1000              # Size of fitness cache
    cache_ttl: 300                # Cache time-to-live in seconds
    parallel_evaluation: true      # Enable parallel fitness evaluation
    max_workers: 4                # Number of parallel workers

# MSC-Lang Compiler Configuration
compiler:
  optimize: true                  # Enable code optimization
  debug: false                    # Enable debug mode
  jit_enabled: true              # Enable JIT compilation
  cache_compiled: true           # Cache compiled code
  
  # Parser settings
  parser:
    max_errors: 10               # Maximum parsing errors before stopping
    recover_errors: true         # Attempt error recovery
    
  # Code generation
  codegen:
    target: python               # Target language (python, javascript, wasm)
    optimize_level: 2            # Optimization level (0-3)

# Memory System Configuration
memory:
  persistence_path: null         # Path for memory persistence (null = no persistence)
  
  # Context configuration
  contexts:
    main:
      capacity: 4096
    generated_code:
      capacity: 2048
    quantum_states:
      capacity: 1024
    evolution_history:
      capacity: 2048
    metrics:
      capacity: 512
    templates:
      capacity: 512
    patterns:
      capacity: 1024
      
  # Garbage collection
  gc:
    enabled: true
    interval: 60                 # GC interval in seconds
    threshold: 0.8               # Memory usage threshold for GC

# System Configuration
system:
  auto_save: true                # Enable automatic state saving
  autosave_dir: "taec_saves"     # Directory for auto-saves
  max_autosaves: 10              # Maximum number of auto-save files
  autosave_interval: 300         # Auto-save interval in seconds
  
  # Execution
  execution_timeout: 30          # Code execution timeout in seconds
  sandbox_enabled: true          # Enable sandboxed execution
  
  # Logging
  logging:
    level: INFO                  # Logging level (DEBUG, INFO, WARNING, ERROR)
    file: "taec.log"            # Log file path
    max_size: 10485760          # Max log file size (10MB)
    backup_count: 5             # Number of backup log files
    
  # Performance
  performance:
    monitor_enabled: true        # Enable performance monitoring
    metrics_interval: 10         # Metrics collection interval

# Plugin System Configuration
plugins:
  enabled: true                  # Enable plugin system
  plugin_dir: "taec_plugins"     # Plugin directory
  auto_load: true               # Automatically load plugins
  
  # Plugin security
  security:
    sandboxed: true             # Run plugins in sandbox
    allowed_imports:            # Allowed imports for plugins
      - taec_v3
      - numpy
      - asyncio

# API Configuration
api:
  enabled: false                 # Enable REST API
  host: "0.0.0.0"               # API host
  port: 8000                    # API port
  cors_origins:                 # CORS allowed origins
    - "http://localhost:3000"
    - "http://localhost:8080"
  
  # Authentication
  auth:
    enabled: false              # Enable authentication
    secret_key: "change-me"     # JWT secret key
    algorithm: "HS256"          # JWT algorithm
    token_expire: 3600          # Token expiration in seconds

# Visualization Configuration
visualization:
  enabled: true                 # Enable visualization generation
  dpi: 150                      # DPI for saved figures
  format: "png"                 # Output format (png, svg, pdf)
  style: "seaborn"             # Matplotlib style
  
  # Graph visualization
  graph:
    max_nodes: 1000            # Maximum nodes to visualize
    layout: "spring"           # Graph layout algorithm
    node_size_factor: 50       # Node size multiplier
    
  # Color schemes
  colors:
    node_state: "RdYlBu_r"     # Colormap for node states
    edges: "Blues"             # Colormap for edges
    quantum: "viridis"         # Colormap for quantum states

# Advanced Features
advanced:
  # Pattern detection
  patterns:
    min_pattern_size: 3         # Minimum size for pattern detection
    emergence_threshold: 0.6    # Threshold for emergence detection
    
  # Quantum algorithms
  quantum_algorithms:
    grover:
      iterations: auto          # Number of Grover iterations (auto = optimal)
    qaoa:
      layers: 3                 # QAOA circuit depth
    vqe:
      ansatz: "ry"             # VQE ansatz type
      
  # Category theory
  categories:
    enabled: true              # Enable category theory features
    functor_optimization: true  # Optimize functor mappings

# Development Configuration
development:
  debug_mode: false            # Enable debug mode
  profiling: false             # Enable profiling
  trace_execution: false       # Trace code execution
  
  # Testing
  test:
    coverage_threshold: 80     # Minimum test coverage
    parallel_tests: true       # Run tests in parallel
    
# Production Configuration
production:
  cluster_mode: false          # Enable cluster mode
  redis_url: null             # Redis URL for distributed cache
  database_url: null          # Database URL for persistence
  
  # Monitoring
  monitoring:
    prometheus_enabled: false  # Enable Prometheus metrics
    sentry_dsn: null          # Sentry DSN for error tracking
    
  # Scaling
  scaling:
    max_workers: null         # Max worker processes (null = auto)
    worker_timeout: 300       # Worker timeout in seconds